{
  "compilerOptions": {
    "target": "es2020",
    "jsx": "react-jsx",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],  // Adjust if necessary
  "exclude": ["node_modules"]
}
